@model ShelterDomain.Model.Shelter

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete shelter @ViewBag.ShelterName?</h3>
<p>This action will also delete all animals associated with this shelter. This cannot be undone.</p>

<div>
    <h4>Shelter</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShelterId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShelterId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShelterName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShelterName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contact)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contact)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ShelterId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
