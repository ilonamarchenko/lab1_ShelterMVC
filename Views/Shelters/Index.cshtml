@model IEnumerable<ShelterDomain.Model.Shelter>

@{
    ViewData["Title"] = "Притулки";
}

<h1>Притулки</h1>

<p>
    <a asp-action="Create">Додавання притулку</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShelterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShelterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShelterId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShelterId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShelterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
